<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是首页"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnStartSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnStartSetting"
        android:text="跳转设置页面,需登录" />

    <Button
        android:id="@+id/btnStartPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnStartPay"
        android:text="跳转充值页面,无需登录" />

    <Button
        android:id="@+id/btnStartSettingMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnStartSettingMulti"
        android:text="多线程跳转设置页面,需登录" />

    <Button
        android:id="@+id/loginOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loginOut"
        android:text="登录" />

</LinearLayout>